<?xml version="1.0" encoding="UTF-8"?>

<Context>
    <Environment name="DB_ENV" value="dev" type="java.lang.String"/>

    <!-- Defines a Data Source Connecting to localhost moviedb-->
    <Resource name="jdbc/moviedb"
              auth="Container"
              driverClassName="com.mysql.cj.jdbc.Driver"
              type="javax.sql.DataSource"
              username="mytestuser"
              password="My6$Password"
              url="jdbc:mysql://host.docker.internal:3306/moviedb"/>

    <Resource name="jdbc/writeconnect"
              auth="Container"
              driverClassName="com.mysql.cj.jdbc.Driver"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              maxTotal="100" maxIdle="30" maxWaitMillis="10000"
              username="mytestuser"
              password="My6$Password"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?autoReconnect=true&amp;allowPublicKeyRetrieval=true&amp;useSSL=false&amp;cachePrepStmts=true"/>

    <Resource name="jdbc/readconnect"
              auth="Container"
              driverClassName="com.mysql.cj.jdbc.Driver"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              maxTotal="100" maxIdle="30" maxWaitMillis="10000"
              username="mytestuser"
              password="My6$Password"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?autoReconnect=true&amp;allowPublicKeyRetrieval=true&amp;useSSL=false&amp;cachePrepStmts=true"/>

    <Environment name="DB_ENV" value="prod" type="java.lang.String"/>

    <Resource name="jdbc/writeconnect"
              auth="Container"
              driverClassName="com.mysql.cj.jdbc.Driver"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              maxTotal="100" maxIdle="30" maxWaitMillis="10000"
              username="mytestuser"
              password="My6$Password"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?autoReconnect=true&amp;allowPublicKeyRetrieval=true&amp;useSSL=false&amp;cachePrepStmts=true"/>

    <Resource name="jdbc/readconnect"
              auth="Container"
              driverClassName="com.mysql.cj.jdbc.Driver"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              maxTotal="100" maxIdle="30" maxWaitMillis="10000"
              username="mytestuser"
              password="My6$Password"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?autoReconnect=true&amp;allowPublicKeyRetrieval=true&amp;useSSL=false&amp;cachePrepStmts=true"/>
</Context>